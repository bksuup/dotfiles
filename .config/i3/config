# Change kblayout
bindsym $mod+comma exec setxkbmap no
bindsym $mod+period exec setxkbmap us

# Gaps
gaps inner 10
gaps outer 0

# Bytt esc og caps
exec_always --no-startup-id setxkbmap -option caps:swapescape
